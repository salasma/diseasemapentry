<h1>Current user: {{user.userID}}</h1>

<h1> Current user data: </h1>

<table>
    <thead>
        <th>userID</th>
        <th>email</th>
        <th>stateID</th>
        <th>status</th>
    </thead>
    <tbody>
        <tr>
            <td>{{user.userID}}</td>
            <td>{{user.email}}</td>
            <td>{{user.stateID}}</td>
            <td>{{user.diagnosisName}}</td>
        </tr>
    </tbody>
</table>

<br>

<form id="updateUser" action="/users/:{{user.userID}}" method="post">
    email: <input type="text" name="email" value="{{user.email}}"><br>
    state: <select name = "stateID">
               {{#each states}}
               <option value = "{{stateID}}"> {{stateID}}</option>
               {{/each}}
               </select> <br>
    diagnosis: <select name = "sicknessID">
       {{#each diagnoses}}
       <option value = "{{sicknessID}}"> {{diagnosisName}}</option>
       {{/each}}
       </select> <br>

<input type = "submit" value = "update">
</form>

<form id= "deleteUser" action= "/deleteUser/:{{user.userID}}" method="post">
    <input type = "submit" value = "delete">
</form>